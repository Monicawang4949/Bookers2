<div class="container mx-auto" style="width: 400px;">
  <h1 class="row mt-3">Editing Book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class: 'edit_form form-control input-lg' %>
      <p class="mt-3">Opinion</p>
      <%= f.text_area :body, class: 'edit_form form-control input-lg' %><br>
      <%= f.submit 'Update Book', class: 'btn btn-success' %>
    <% end %>
  </div>
  <div class="row mt-3">
    <%= link_to "Show", book_path(@book) %>
    <p> | </p>
    <%= link_to "Back", books_path %>
  </div>
</div>