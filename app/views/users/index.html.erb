<div class="container">
  <div class="row pt-3">
    <div class="col-md-3">
      <!--user部分-->
      <h2>User info</h2>
      <div>
        <%= image_tag current_user.get_profile_image, size: "100x100" %>
      </div>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= current_user.introduction %></td>
        </tr>
      </table>
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to edit_user_path(current_user.id) do %>
          <i class="fa-solid fa-user-gear edit_user_btn"></i>
        <% end %>
      </button>

      <!--投稿部分-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class: 'main_form form-control input-lg' %>
        <p class="mt-3">Opinion</p>
        <%= f.text_area :body, class: 'main_form form-control input-lg' %>
        <%= f.submit 'Create Book', class: 'mt-3 btn btn-success' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <!--ユーザー一覧-->
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col" style="width: 40%">image</th>
            <th scope="col" style="width: 40%">name</th>
            <th scope="col"> </th>
          </tr>
        </thead>
        <tbody>
          <% @userall.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: "100x100" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>