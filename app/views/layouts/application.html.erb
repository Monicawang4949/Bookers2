<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/de37796b15.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="container-fluid">
      <div class="row">
        <div class="col m-3">
          <%= link_to root_path, class: "text-decoration-none" do %>
            <p class="h3">Bookers</p>
          <% end %>
        </div>
        <div class="col m-2 d-flex justify-content-end">
          <% if user_signed_in? %>
            <div class="col m-1">
              <%= link_to user_path(current_user.id), class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-house"></i>
                  Home
                </p>
              <% end %>
            </div>
            <div class="col m-1">
              <%= link_to users_path, class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-users"></i>
                  Users
                </p>
              <% end %>
            </div>
            <div class="col m-1">
              <%= link_to books_path, class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-book-open"></i>
                  Books
                </p>
              <% end %>
            </div>
            <div class="col m-1">
              <%= link_to destroy_user_session_path, class: "text-decoration-none", method: :delete do %>
                <p>
                  <i class="fa-solid fa-right-from-bracket"></i>
                  Log out
                </p>
              <% end %>
            </div>
          <% else %>
            <div class="col m-1">
              <%= link_to root_path, class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-house"></i>
                  Home
                </p>
              <% end %>
            </div>
            <div class="col m-1">
              <%= link_to home_about_path, class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-link"></i>
                  About
                </p>
              <% end %>
            </div>
            <div class="col m-1">
              <%= link_to new_user_registration_path, class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-user-plus"></i>
                  Sign up
                </p>
              <% end %>
            </div>
            <div class="col m-1">
              <%= link_to new_user_session_path, class: "text-decoration-none" do %>
                <p>
                  <i class="fa-solid fa-right-to-bracket"></i>
                  Log in
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="d-flex justify-content-center">
      <div>
        <p class="mt-5">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
